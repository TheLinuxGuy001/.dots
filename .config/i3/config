exec --no-startup-id trayer --edge top --align right --transparent true --alpha 255 --padding 2 --iconspacing 2 --monitor primary
# exec --no-startup-id conky -c $HOME/.config/conky/nord.conkyrc

exec_always --no-startup-id picom -b --experimental-backends
exec_always --no-startup-id for id in $(xinput list | grep "pointer" | cut -d '=' -f 2 | cut -f 1); do xinput --set-prop $id 'libinput Accel Profile Enabled' 0, 1; done
exec_always --no-startup-id dunst
exec_always --no-startup-id imwheel -k -b 45
exec_always --no-startup-id xset r rate 275 45


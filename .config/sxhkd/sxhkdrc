Print
	maim -u -B -g 2560x1440+1920+0 | xclip -selection clipboard -t image/png

super + Print
	maim --window $(xdotool getactivewindow) -u -B | xclip -selection clipboard -t image/png

shift + Print
	maim --select -u -B | xclip -selection clipboard -t image/png
	
ctrl + Print
	maim -u -B -g 1920x1080+0+180 | xclip -selection clipboard -t image/png

# terminal emulator
super + t
	kitty

# program launcher
super + d
    rofi -show drun

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

super + shift + e
    ~/.config/rofi/powermenu.sh

super + b	
    env LIBVA_DRIVER_NAME=nvidia MOZ_DISABLE_RDD_SANDBOX=1 EGL_PLATFORM=wayland librewolf

super + f
    thunar

super + shift + Escape
    ~/.scripts/lock.sh

## Hardware
XF86AudioRaiseVolume
    i3-volume -n up 5 -x 100 -y
XF86AudioLowerVolume
    i3-volume -n down 5 -x 100 -y
XF86AudioMute
    i3-volume -n mute -y

## Window Management

# quit/restart bspwm
super + shift + {q,r}
    bspc {quit,wm -r}

super + Tab
    bspc node -t {floating,tiled}

super + {_,shift + }q
    bspc node -{c,k}

alt + Tab
    bspc node -f next.local.!hidden.window

super + {Up,Down,Left,Right}
    {bspc node -z top 10 10; bspc node -z bottom -10 -10, bspc node -z bottom 10 10; bspc node -z top -10 -10, bspc node -z left 10 10; bspc node -z right -10 -10, bspc node -z right 10 10; bspc node -z left -10 -10 }

super + shift + {Up,Down,Left,Right}
    bspc node -s {north,south,west,east}

super + space
    bspc node -t \~fullscreen

super + m 
    bspc desktop -l next

super + {_,shift + }{1-9,0}
    bspc {desktop -f, node -d} '{1-9,10}'

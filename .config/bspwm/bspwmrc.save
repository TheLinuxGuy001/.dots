#! /bin/sh

pgrep -x sxhkd > /dev/null || sxhkd &
nvidia-settings --load-config-only &
nitrogen --restore &
/usr/lib/mate-polkit/polkit-mate-authentication-agent-1 &
picom -b --experimental-backends &
for id in $(xinput list | grep "pointer" | cut -d '=' -f 2 | cut -f 1); do xinput --set-prop $id 'libinput Accel Profile Enabled' 0, 1; done &
imwheel -k -b 45 &
dunst -conf ~/.config/dunst/dunstrc &
$HOME/.scripts/xidlehook.sh &
dunst &
imwheel -k -b 45 &
xset r rate 275 45 &
$HOME/.config/polybar/launch.sh &

bspc monitor DP-0 II IV VI VIII X
bspc monitor DP-2 I III V VII IX

bspc config border_width         0
bspc config window_gap          12

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

#bspc rule -a Gimp desktop='^8' state=floating follow=on
#bspc rule -a Chromium desktop='^2'
#bspc rule -a mplayer2 state=floating
#bspc rule -a Kupfer.py focus=on
#bspc rule -a Screenkey manage=off
bspc rule -a 'Minecraft 1.8.9' state=floating

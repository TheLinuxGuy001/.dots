alias open='xdg-open'
alias sudo='sudo -p "$(printf "\033[1;31mPassword: \033[0;0m" )"'
alias rm='printf "\033[1;31m" && rm -rIv'
alias cp='printf "\033[1;32m" && cp -rv'
alias mv='printf "\033[1;34m" && mv -v'
alias mkdir='printf "\033[1;33m" && mkdir -v'
alias rmdir='printf "\033[1;35m" && rmdir -v'
alias ..='cd ..'

alias la='exa --icons -a --group-directories-first'
alias ll='exa --icons -lah --group-directories-first'
alias ls='exa --icons --group-directories-first'
alias tree='exa --icons --tree'

alias dotpush='$HOME/.scripts/push.sh'
alias catpush='$HOME/.scripts/catpush.sh'

alias cat='bat'
alias yay='paru'

#alias i3conf="nano $HOME/.config/i3/config"
alias wmrc="nano $HOME/.config/bspwm/bspwmrc"
alias sxrc="nano $HOME/.config/sxhkd/sxhkdrc"
alias picomrc="nano $HOME/.config/picom.conf"
alias updates="checkupdates && paru -Qum"

alias grep='rg'

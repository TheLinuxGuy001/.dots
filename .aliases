alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'
alias ..='cd ..'

alias la='exa --icons -a --group-directories-first'
alias ll='exa --icons -lah --group-directories-first'
alias ls='exa --icons --group-directories-first'
alias tree='exa --icons --tree'

alias dotpush='$HOME/.scripts/push.sh'

alias cat='bat'
alias yay='paru'

alias reboot="loginctl reboot"
alias shutdown="loginctl shutdown"
alias suspend="loginctl suspend"

alias i3conf="nano $HOME/.config/i3/config"
alias picomconf="nano $HOME/.config/picom.conf"
